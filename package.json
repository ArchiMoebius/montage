{
  "name": "montage",
  "version": "0.0.0",
  "description": "Electron Desktop application to organize image files (PNG, JPG/JPEG) into galleries",
  "author": "PoeRhiza <poerhiz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "npm run lint && electron-webpack dev",
    "compile": "npm run lint && electron-webpack",
    "dist": "npm run compile && ./node_modules/.bin/electron-builder",
    "dist:dir": "npm run lint && npm dist --dir -c.compression=store -c.mac.identity=null",
    "lint": "./node_modules/.bin/eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src"
  },
  "dependencies": {
    "archiver": "^2.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "dexie": "^2.0.3",
    "electron-log": "^2.2.14",
    "exif": "^0.6.0",
    "moment": "^2.22.1",
    "mt-geo": "^1.0.1",
    "node-forge": "^0.7.5",
    "sharp": "^0.20.2",
    "source-map-support": "^0.5.6",
    "vue": "^2.5.16",
    "vue-electron": "^1.0.6",
    "vue-material": "^1.0.0-beta-10.2",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.16",
    "vuelidate": "^0.7.2",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "electron": "^2.0.2",
    "electron-builder": "^20.14.7",
    "electron-debug": "^1.5.0",
    "electron-webpack": "^2.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.12.0",
    "vue-loader": "^15.2.0",
    "webpack": "^4.8.3"
  },
  "resolutions": {
    "webpack-sources": "1.0.1"
  },
  "build": {
    "asar": false,
    "productName": "Montage",
    "copyright": "Copyright Â© 2018 Poe Rhiza",
    "appId": "com.electron.poerhiza.montage",
    "linux": {
      "icon": "static/icon.png",
      "category": "Graphics",
      "desktop": "static/desktopentry",
      "target": [
        "rpm",
        "tar.gz"
      ]
    },
    "rpm": {
      "icon": "static/icon.png"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "static/icon.ico"
    }
  }
}
